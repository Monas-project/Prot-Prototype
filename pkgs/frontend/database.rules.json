{
  "rules": {
    "users": {
      ".read": true,
      ".write": true,
      "$address": {
        ".validate": "newData.hasChildren(['fcmToken'])"
      },
      ".indexOn": "address"
    },
    "messages": {
      ".read": true,
      ".write": true,
      "$messageId": {
        ".validate": "newData.hasChildren(['sender', 'receiver', 'content', 'timestamp'])"
      },
      ".indexOn": ["sender", "receiver"]
    }
  }
}
